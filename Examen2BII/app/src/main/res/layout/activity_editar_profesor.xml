<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditarProfesor">

    <EditText
        android:id="@+id/txt_nombre_editar"
        android:layout_width="311dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Nombre del profesor"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/txt_cedula_editar"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txt_cedula_editar"
        app:layout_constraintTop_toBottomOf="@+id/txt_cedula_editar" />

    <TextView
        android:id="@+id/txt_id_profesor_editar"
        android:layout_width="76dp"
        android:layout_height="44dp"
        android:layout_marginTop="4dp"
        android:hint="0"
        android:textAlignment="center"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.933"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txt_fec_nac_editar"
        android:layout_width="311dp"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Fecha de nacimiento (dd-mm-aaaa)"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/txt_nombre_editar"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/txt_nombre_editar"
        app:layout_constraintTop_toBottomOf="@+id/txt_nombre_editar" />

    <EditText
        android:id="@+id/txt_longitud_emp"
        android:layout_width="122dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="28dp"
        android:ems="10"
        android:hint="LONG."
        android:inputType="textPersonName"
        android:translationX="-15dp"
        app:layout_constraintEnd_toEndOf="@+id/txt_telefono_profe_editar"
        app:layout_constraintTop_toBottomOf="@+id/txt_telefono_profe_editar" />

    <EditText
        android:id="@+id/txt_telefono_profe_editar"
        android:layout_width="311dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Telefono de Contacto"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/txt_fec_nac_editar"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txt_fec_nac_editar"
        app:layout_constraintTop_toBottomOf="@+id/txt_fec_nac_editar" />

    <EditText
        android:id="@+id/txt_cedula_editar"
        android:layout_width="311dp"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="CÃ©dula de Identidad"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.326"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_id_profesor_editar" />

    <EditText
        android:id="@+id/txt_latitud_emp"
        android:layout_width="122dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="20dp"
        android:ems="10"
        android:hint="LAT."
        android:inputType="textPersonName"
        android:translationX="-20dp"
        app:layout_constraintEnd_toStartOf="@+id/txt_longitud_emp"
        app:layout_constraintTop_toBottomOf="@+id/txt_telefono_profe_editar" />

    <EditText
        android:id="@+id/txt_id_facultad_prof"
        android:layout_width="303dp"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="ID Facultad"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/txt_longitud_emp"
        app:layout_constraintHorizontal_bias="0.59"
        app:layout_constraintStart_toStartOf="@+id/txt_latitud_emp"
        app:layout_constraintTop_toBottomOf="@+id/txt_latitud_emp" />

    <Button
        android:id="@+id/btn_edita_pro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="Editar"
        app:layout_constraintEnd_toEndOf="@+id/txt_id_facultad_prof"
        app:layout_constraintHorizontal_bias="0.019"
        app:layout_constraintStart_toStartOf="@+id/txt_id_facultad_prof"
        app:layout_constraintTop_toBottomOf="@+id/txt_id_facultad_prof" />

    <Button
        android:id="@+id/btn_cancelar_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="cancelar"
        app:layout_constraintEnd_toEndOf="@+id/txt_id_facultad_prof"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/btn_edita_pro"
        app:layout_constraintTop_toBottomOf="@+id/txt_id_facultad_prof" />
</androidx.constraintlayout.widget.ConstraintLayout>