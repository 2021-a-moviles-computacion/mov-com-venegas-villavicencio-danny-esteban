<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt_cms_inicio"
        android:layout_width="335dp"
        android:layout_height="172dp"
        android:layout_marginTop="20dp"
        android:text="Escuela Politecnica Nacional"
        android:textAlignment="center"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="@+id/img_view_cms"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/img_view_cms"
        app:layout_constraintTop_toBottomOf="@+id/img_view_cms" />

    <ImageView
        android:id="@+id/img_view_cms"
        android:layout_width="332dp"
        android:layout_height="250dp"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/descarga" />

    <Button
        android:id="@+id/btn_iniciar_sistema"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="INICIAR"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/txt_cms_inicio"
        app:layout_constraintStart_toStartOf="@+id/txt_cms_inicio"
        app:layout_constraintTop_toBottomOf="@+id/txt_cms_inicio" />
</androidx.constraintlayout.widget.ConstraintLayout>